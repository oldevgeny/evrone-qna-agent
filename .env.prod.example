# Production Configuration Template
# Copy to .env.prod and fill in actual values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=QnA Agent API
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE (PostgreSQL via PgBouncer)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://qna:${DB_PASSWORD}@pgbouncer:6432/qna
DB_PASSWORD=

# =============================================================================
# LLM (LiteLLM via OpenRouter)
# =============================================================================
LITELLM_API_KEY=
LITELLM_API_BASE=https://openrouter.ai/api/v1
LITELLM_MODEL=openrouter/openai/gpt-4o-mini

# =============================================================================
# LANGFUSE (LLM Observability)
# =============================================================================
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# KNOWLEDGE BASE
# =============================================================================
KNOWLEDGE_BASE_PATH=/app/knowledge

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000

# =============================================================================
# TRAEFIK
# =============================================================================
DOMAIN=
ACME_EMAIL=
