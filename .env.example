# QnA Agent API Configuration
# Copy this file to .env.local or .env.prod and fill in values

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME=QnA Agent API
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# DATABASE
# =============================================================================
# Local: sqlite+aiosqlite:///./data/qna.db
# Prod:  postgresql+asyncpg://user:pass@host:port/db
DATABASE_URL=

# =============================================================================
# LLM (LiteLLM via OpenRouter)
# =============================================================================
LITELLM_API_KEY=
LITELLM_API_BASE=https://openrouter.ai/api/v1
LITELLM_MODEL=openrouter/openai/gpt-4o-mini

# =============================================================================
# LANGFUSE (LLM Observability)
# =============================================================================
# Get credentials from https://cloud.langfuse.com/
LANGFUSE_PUBLIC_KEY=
LANGFUSE_SECRET_KEY=
LANGFUSE_HOST=https://cloud.langfuse.com

# =============================================================================
# KNOWLEDGE BASE
# =============================================================================
KNOWLEDGE_BASE_PATH=./knowledge

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8000
