# Hetzner Cloud Configuration
# Set hcloud_token via environment variable: export TF_VAR_hcloud_token="your-token"

environment = "prod"
location    = "nbg1"
server_type = "cax11"

# Domain configuration (leave empty to skip ingress setup)
domain     = ""
acme_email = ""

# Database password - REQUIRED
# Set via environment variable: export TF_VAR_db_password="your-secure-password"
# db_password = ""

# LiteLLM/OpenRouter API Key - REQUIRED
# Set via environment variable: export TF_VAR_litellm_api_key="your-api-key"
# litellm_api_key = ""

# Langfuse observability (optional)
# Set via environment variables:
# export TF_VAR_langfuse_public_key="your-public-key"
# export TF_VAR_langfuse_secret_key="your-secret-key"
langfuse_public_key = ""
langfuse_secret_key = ""

# Admin IPs for SSH and K8s API access - REQUIRED (no default for security)
# Set to your development machine IP(s) in CIDR format
# Example: admin_ips = ["203.0.113.10/32", "198.51.100.0/24"]
admin_ips = ["YOUR_IP/32"]

# Application image configuration
# Use a specific version tag instead of 'latest' for production
# app_image = "ghcr.io/your-org/qna-agent:v1.0.0"
# app_image_pull_policy = "IfNotPresent"

# ============================================================================
# TERRAFORM CLOUD CONFIGURATION
# ============================================================================
# When using Terraform Cloud, set sensitive variables in the workspace UI:
#
# Required Variables (mark as sensitive):
#   - hcloud_token
#   - db_password
#   - litellm_api_key
#
# Optional Variables (mark as sensitive):
#   - langfuse_public_key
#   - langfuse_secret_key
#
# Non-sensitive Variables (can be set in workspace or terraform.tfvars):
#   - environment, location, server_type
#   - domain, acme_email
#   - admin_ips
#   - app_image, app_image_pull_policy
