# Load Test Configuration
# Copy to .env.loadtest and customize as needed

# =============================================================================
# Target Configuration
# =============================================================================

# Target host URL for load tests
LOADTEST_HOST=http://localhost:8000

# =============================================================================
# Mock LLM Settings
# =============================================================================

# Enable LLM response mocking (recommended for load tests)
LOADTEST_MOCK_LLM_ENABLED=true

# Simulated LLM response delay in milliseconds
LOADTEST_MOCK_LLM_DELAY_MS=100

# Default mock LLM response content
LOADTEST_MOCK_LLM_RESPONSE="This is a mocked AI response for load testing."

# =============================================================================
# Performance Thresholds
# =============================================================================

# 95th percentile response time threshold (ms)
LOADTEST_P95_RESPONSE_TIME_MS=500

# 99th percentile response time threshold (ms)
LOADTEST_P99_RESPONSE_TIME_MS=1000

# Maximum acceptable error rate (percentage)
LOADTEST_MAX_ERROR_RATE_PERCENT=1.0

# =============================================================================
# Smoke Test Settings
# =============================================================================

SMOKE_USERS=1
SMOKE_SPAWN_RATE=1
SMOKE_RUN_TIME=30s

# =============================================================================
# Load Test Settings (Normal Expected Traffic)
# =============================================================================

LOAD_USERS=50
LOAD_SPAWN_RATE=5
LOAD_RUN_TIME=5m

# =============================================================================
# Stress Test Settings (Push Beyond Capacity)
# =============================================================================

STRESS_USERS=200
STRESS_SPAWN_RATE=20
STRESS_RUN_TIME=10m

# =============================================================================
# Spike Test Settings (Sudden Traffic Bursts)
# =============================================================================

SPIKE_INITIAL_USERS=10
SPIKE_SPIKE_USERS=100
SPIKE_SPAWN_RATE=50
SPIKE_RUN_TIME=5m
